<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
        <!--item name="android:datePickerDialogTheme">@style/DateTimePickerDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/DateTimePickerDialogTheme</item-->
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <!-- Theme for all underlined TextView titles -->
    <style name="headerText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <!-- Theme for all EditText and black TextViews -->
    <style name="blackText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="whiteText">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Theme for Dialog -->
    <style name="AppTheme.CustomDialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="TabColor" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="DateTimePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="Color1SwitchStyle" parent = "Theme.AppCompat">
        <item name="colorControlActivated">@color/primaryColor</item>
        <item name="android:colorForeground">@color/accentColor</item>
    </style>


</resources>