<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.uu.csproject.monadclient.MainActivity"
    >

    <include
        android:id="@+id/actionToolBar"
        layout="@layout/app_bar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionToolBar"
        android:layout_alignParentBottom="true"
        android:id="@+id/notificationlayout"
        android:padding="@dimen/layout_padding"
        >
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notification1"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            >

            <LinearLayout
                android:id="@+id/first_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_notification"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/medium_padding"
                >

                <ImageView
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/ic_assistant_photo_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_cancelcontentdescription"
                    />


                <TextView
                    android:id="@+id/busnotification_textview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_notification_one"
                    android:padding="@dimen/medium_padding"
                    style="@style/importantText"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_tripsactivity_fromtime"
                    android:layout_gravity="bottom"
                    android:textColor="@color/primaryColorDark"

                    />

                <ImageView
                    android:layout_width="@dimen/cancel_size"
                    android:layout_height="@dimen/cancel_size"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_cancelcontentdescription"
                    android:onClick="removeNotification"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notification2"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_below="@id/notification1"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            >

            <LinearLayout
                android:id="@+id/second_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/first_notification"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/medium_padding"
                >

                <ImageView
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/ic_alarm_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_cancelcontentdescription"
                    />


                <TextView
                    android:id="@+id/time_to_depart_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_notification_two"
                    style="@style/importantText"
                    android:padding="@dimen/medium_padding"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_tripsactivity_fromtime"
                    android:layout_gravity="bottom"
                    android:textColor="@color/primaryColorDark"

                    />

                <ImageView
                    android:layout_width="@dimen/cancel_size"
                    android:layout_height="@dimen/cancel_size"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_cancelcontentdescription"
                    android:onClick="removeNotification"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notification3"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_below="@id/notification2"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            >
            <LinearLayout
                android:id="@+id/third_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/medium_padding"
                >

                <ImageView
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/ic_feedback_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_iconcontentdescription"
                    />

                <TextView
                    android:id="@+id/destinationnotification_text_view"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_notification_one"
                    style="@style/importantText"
                    android:padding="@dimen/medium_padding"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_tripsactivity_fromtime"
                    android:textColor="@color/primaryColorDark"
                    android:layout_gravity="bottom"
                    />

                <ImageView
                    android:layout_width="@dimen/cancel_size"
                    android:layout_height="@dimen/cancel_size"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_cancelcontentdescription"
                    android:onClick="removeNotification"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/notification4"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            android:layout_below="@id/notification3"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            >

            <LinearLayout
                android:id="@+id/fourth_notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/second_notification"
                android:orientation="horizontal"
                android:background="@color/white"
                android:padding="@dimen/medium_padding"
                >

                <ImageView
                    android:layout_width="@dimen/icon_medium"
                    android:layout_height="@dimen/icon_medium"
                    android:src="@drawable/ic_assistant_photo_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_iconcontentdescription"
                    android:onClick="rescheduleTrip"
                    android:id="@+id/alerticon" />

                <TextView
                    android:id="@+id/destination_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_notification_reschedule"
                    style="@style/importantText"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/medium_padding"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="@dimen/medium_text"
                    android:text="@string/label_tripsactivity_fromtime"
                    android:textColor="@color/primaryColorDark"
                    android:layout_gravity="bottom"
                    />


                <ImageView
                    android:layout_width="@dimen/cancel_size"
                    android:layout_height="@dimen/cancel_size"
                    android:src="@drawable/ic_clear_black_24dp"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/label_notification_iconcontentdescription"
                    android:onClick="removeNotification"
                    />

            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</RelativeLayout>