<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="@dimen/cardview_default_elevation"
    card_view:cardBackgroundColor="@color/gray"
    >

    <LinearLayout
        android:id="@+id/first_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/first_notification"
        android:orientation="horizontal"
        android:padding="@dimen/medium_padding"
        >

        <ImageView
            android:id="@+id/label_icon"
            android:layout_width="@dimen/icon_medium"
            android:layout_height="@dimen/icon_medium"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/img_description"
            />

        <TextView
            android:id="@+id/label_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:textSize="@dimen/medium_text"
            android:padding="@dimen/medium_padding"
            style="@style/blackText"
            android:layout_gravity="center_vertical"
            />
        <ImageView
            android:layout_width="@dimen/cancel_size"
            android:layout_height="@dimen/cancel_size"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/img_description"
            android:id="@+id/image1"
            />
        <TextView
            android:id="@+id/label_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/small_text"
            android:gravity="end"
            android:layout_gravity="bottom"
            android:textColor="@color/primaryColorDark"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"
            android:contentDescription="@string/img_description"
            android:layout_gravity="center_vertical"
            android:id="@+id/image2"
            />

    </LinearLayout>
</android.support.v7.widget.CardView>