<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.uu.csproject.monadclient.MainActivity"
    android:weightSum="1">

    <include
        android:id="@+id/actionToolBar"
        layout="@layout/app_bar" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/actionToolBar"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/searchbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_sizelarge"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:focusable="true"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="@string/label_main_searchtext"
                style="@style/whiteText"
                android:textColorHint="#ffffff"
                android:textStyle="italic"
                android:background="@color/black"
                android:padding="@dimen/medium_padding"
                android:id="@+id/editText"
                android:imeActionLabel="Go"/>

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="@dimen/button_sizelarge"
                android:layout_height="@dimen/button_sizelarge"
                android:background="@color/primaryColor"
                android:src="@drawable/ic_location_on_white_48dp"
                android:onClick="linkToSearch"
                android:contentDescription="@string/label_routesuccess_iconcontentdescription"/>

        </LinearLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/successcard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/button_sizelarge"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_below="@+id/searchbar"
            card_view:cardBackgroundColor="@color/primaryColor"
            android:gravity="center_horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/small_padding">
                <!--your booking was successful-->
                <TextView
                    android:id="@+id/booking_successful"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/header_textlarge"
                    android:text="@string/label_routesuccess_success"
                    style="@style/whiteText"
                    android:textStyle="italic"
                    android:padding="@dimen/medium_padding"
                    android:gravity="center_horizontal"
                    />

                <!--firstline-->
                <LinearLayout
                    android:id="@+id/layout_firstline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/booking_successful"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_padding"
                    >
                    <TextView
                        android:id="@+id/trip_depart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/label_routesuccess_depart"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:gravity="end"

                        />

                    <TextView
                        android:id="@+id/trip_departstopname"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="@string/non_available"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/trip_depart_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/non_available"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_second_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_firstline"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_padding"
                    >
                    <TextView
                        android:id="@+id/trip_arrive_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/label_routesuccess_arrive"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:layout_weight="1"
                        android:gravity="end"
                        />

                    <TextView
                        android:id="@+id/trip_arrive_stop_name_text_view"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text="@string/non_available"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:layout_weight="2"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/trip_arrive_time"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/non_available"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:id="@+id/separator"
                    android:layout_above="@+id/layout_third_line"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:padding="@dimen/small_padding">
                </View>

                <LinearLayout
                    android:id="@+id/layout_third_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_padding"
                    android:layout_below="@+id/layout_second_line"
                    android:layout_alignRight="@+id/layout_second_line"
                    android:layout_alignEnd="@+id/layout_second_line">

                    <ImageView
                        android:id="@+id/walking_sign_image_view"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_directions_walk_black_24dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/label_routesuccess_iconcontentdescription"
                        android:layout_gravity="center_vertical"
                        />

                    <TextView
                        android:id="@+id/trip_more_information_text_view"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_small"
                        android:layout_weight="3"
                        android:text="@string/label_routesuccess_instruction"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:gravity="center_vertical"
                        android:onClick="linkToTripDetails"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_fourth_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_third_line"
                    android:orientation="horizontal"
                    android:padding="@dimen/medium_padding">

                    <ImageView
                        android:id="@+id/bus_sign_image_view"
                        android:layout_width="@dimen/icon_small"
                        android:layout_height="@dimen/icon_small"
                        android:src="@drawable/ic_directions_bus_black_24dp"
                        android:layout_weight="1"
                        android:contentDescription="@string/label_routesuccess_iconcontentdescription"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/trip_bus_number_text_view"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/icon_small"
                        android:layout_weight="3"
                        android:text="@string/label_routesuccess_businfo"
                        android:textSize="@dimen/medium_text"
                        style="@style/whiteText"
                        android:gravity="center_vertical"
                        />
                </LinearLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/countdowncard"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="@dimen/cardview_default_radius"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="@dimen/cardview_default_elevation"
            android:layout_below="@+id/successcard"
            android:layout_marginTop="@dimen/button_sizelarge"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/countdown_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/label_routesuccess_countdowntext"
                    android:textSize="@dimen/medium_text"
                    android:textColor="@color/warnColor"
                    android:gravity="center"
                    android:padding="@dimen/small_padding"
                    />

                <TextView
                    android:id="@+id/label_countdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/medium_padding"
                    android:text="@string/non_available"
                    android:textSize="@dimen/header_textlarge"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/warnColor"
                    android:layout_below="@id/countdown_textview"
                    android:gravity="center"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</RelativeLayout>