<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
    <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColorDark</item>
        <item name="colorAccent">@color/accentColor</item>
    </style>

    <style name="darkTheme" parent="ThemeOverlay.AppCompat.Dark">
    </style>

    <style name="darkTheme.bigBoldText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/big_bold_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="darkTheme.mediumText">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="emergencyTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="background">@color/warnColor</item>
    </style>

    <style name="AppTheme.busStopTheme">
        <item name="background">@color/busColor</item>
    </style>

    <style name="AppTheme.notificationsTheme">
        <item name="background">@color/notificationsColor</item>
    </style>

</resources>
